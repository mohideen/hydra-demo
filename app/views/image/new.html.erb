<%# app/views/image/new.html.erb%>
<%= form_tag({:controller => "image", :action => "create"},  :method => "post", :multipart => true) do  %>

  <%= label_tag @title, "title"  %>
  <%= text_field_tag "title", @title %>
  
  <%= label_tag @description, "Description" %>
  <%= text_field_tag "description", @description %>
 
  <%= label_tag @subject, "subject" %>
  <%= text_field_tag "subject", @subject %>

  <%= label_tag 'file', "Image File" %>
  <%= file_field_tag 'file' %>

  <%#= label_tag 'tn', "Thumbnail File" %>
  <%#= file_field_tag 'tn' %>

  <%= submit_tag "Save" %>
<% end %>

