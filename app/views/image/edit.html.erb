<%# app/views/image/edit.html.erb%>
<%= form_tag({:controller => "image", :action => "update"},  :method => "put") do  %>
  <%= hidden_field_tag "pid",@pid %>

  <%= label_tag @title, "Title"  %>
  <%= text_field_tag "title", @title %>

  <%= label_tag @description, "Description" %>
  <%= text_area_tag "description", @description, :style => "height:125px;" %>

  <%= label_tag @subject, "Subject" %>
  <%= text_field_tag "subject", @subject %>

  <br/>
  <%= submit_tag "Save", :class => "btn large primary" %>
  <a id="btn_cancel" class="btn large primary" href="javascript:window.history.back()">Cancel</a>
<% end %>

